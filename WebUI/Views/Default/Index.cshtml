@model Entities.Concrete.CustomerProcess
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8 center-margin">
    <form class="form-horizontal form-label-left" method="post">

        <div class="form-group col-md-4 col-sm-4 col-xs-12  has-feedback">
            <label for="inputAddress2" class="form-label">Gönderici Adı</label>
            @Html.DropDownListFor(x => x.SenderId, (List<SelectListItem>)ViewBag.Sender,"Gönderici Seçiniz", new
            { @class="form-control" })
        </div>
        <div class="form-group col-md-4 col-sm-4 col-xs-12  has-feedback">
            <label for="inputAddress2" class="form-label">Alıcı Adı</label>
            @Html.DropDownListFor(x => x.ReveiverId, (List<SelectListItem>)ViewBag.Receiver,"Alıcı Seçiniz", new
            { @class="form-control" })
        </div>
        <div class="form-group col-md-6 col-sm-6 col-xs-12  has-feedback">
            <label>Gönderilen Miktar</label>
            <input type="number" asp-for="Amount" class="form-control" placeholder="Gönderilen Miktar">
        </div>
        <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12 ">
                <button class="btn btn-success">Kaydet</button>
            </div>
        </div>
    </form>
</div>